<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="game.GameSetupController">
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
        <Label contentDisplay="RIGHT" text="Player One Name">
            <graphic>
                <TextField fx:id="p1Name" promptText="Player One Name" />
            </graphic>
        </Label>
    </HBox>
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
        <Label contentDisplay="RIGHT" text="Player Two Name">
            <graphic>
                <TextField fx:id="p2Name" promptText="Player Two Name" />
            </graphic>
        </Label>
    </HBox>
   <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
      <children>
          <Button id="green" fx:id="loadGameBTN" mnemonicParsing="false" onAction="#loadGame" stylesheets="@styles.css" text="Lets Play">
            <HBox.margin>
               <Insets right="15.0" />
            </HBox.margin>
         </Button>
         <Button id="green" mnemonicParsing="false" onAction="#loadDashboard" stylesheets="@styles.css" text="Go Back" />
      </children>
   </HBox>
</VBox>
